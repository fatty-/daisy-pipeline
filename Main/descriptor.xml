<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>cmd</id>
  <baseDirectory>daisy-pipeline</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <!-- third party modules -->	
    <fileSet>
      <directory>../repo/plugins</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <!-- framework -->	
    <fileSet>
      <directory>../daisy.pipeline.site/target/site/plugins</directory>
      <outputDirectory>framework</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <!-- modules -->
    <fileSet>
      <directory>../../daisy-pipeline-modules/daisy.pipeline.modules.site/target/site/plugins</directory>
      <outputDirectory>modules</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>etc</directory>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
	<!-- LICENSES -->	
    <fileSet>
      <directory>LICENSES</directory>
      <outputDirectory>LICENSES</outputDirectory>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
     <file>
      <source>dp2.sh</source>
    </file>
     <file>
      <source>dp2ws.sh</source>
    </file>
     <file>
      <source>dp2.bat</source>
    </file>
     <file>
      <source>dp2ws.bat</source>
    </file>
     <file>
      <source>pax-runner-1.6.1.jar</source>
    </file>
     <file>
      <source>bundlesDist.txt</source>
      <destName>bundles.txt</destName>
    </file>
     <file>
      <source>README.txt</source>
    </file>
     <file>
      <source>NOTICE.txt</source>
    </file>


  </files>
  
</assembly>
