<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>cmd</id>
  <baseDirectory>daisy-pipeline</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <!-- third party modules -->	
    <fileSet>
      <directory>../repo/plugins</directory>
      <outputDirectory>fwk/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
	<exclude>*logback*</exclude>	
	<exclude>*slf4*</exclude>	
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../repo/plugins</directory>
      <outputDirectory>fwk/bundle</outputDirectory>
      <includes>
	<include>*logback*</include>	
	<include>*slf4*</include>	
      </includes>
    </fileSet>
    <!-- framework backend-->	
    <fileSet>
      <directory>../daisy.pipeline.site/target/site/plugins</directory>
      <outputDirectory>fwk/framework</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <!-- framework frontend-->	
    <fileSet>
      <directory>../daisy.pipeline.frontend.site/target/site/plugins</directory>
      <outputDirectory>fwk/frontend</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <!-- modules -->
    <fileSet>
      <directory>../../daisy-pipeline.modules/daisy.pipeline.modules.site/target/site/plugins</directory>
      <outputDirectory>fwk/modules</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <!-- conf -->
    <fileSet>
      <directory>etcDist</directory>
      <outputDirectory>fwk/etc</outputDirectory>
    </fileSet>
    <!-- felix launcher-->
    <fileSet>
      <directory>fbin</directory>
      <outputDirectory>fwk/fbin</outputDirectory>
    </fileSet>
    <!-- felix dependencies-->
    <fileSet>
      <directory>bundle</directory>
      <outputDirectory>fwk/bundle</outputDirectory>
    </fileSet>
    <!-- felix shell (just for beta version, get rid of this in the future ) -->
    <fileSet>
      <directory>bundle_shell</directory>
      <outputDirectory>fwk/bundle_shell</outputDirectory>
    </fileSet>
	<!-- LICENSES -->	
    <fileSet>
      <directory>LICENSES</directory>
      <outputDirectory>LICENSES</outputDirectory>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>
	<!-- SAMPLES -->	
    <fileSet>
      <directory>samples</directory>
      <outputDirectory>samples</outputDirectory>
      <!-- <includes>
        <include>**/*.*</include>
      </includes> -->
    </fileSet>
    <fileSet>
      <directory>../CLI</directory>
      <outputDirectory>cli</outputDirectory>
      <excludes>
        <exclude>*ocra*</exclude>
        <exclude>config*.yml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
     <file>
      <source>../CLI/config_dist.yml</source>
      <outputDirectory>./cli</outputDirectory>
      <destName>config.yml</destName>
    </file>
     <file>
      <source>dp2ws_local.sh</source>
      <outputDirectory>./fwk</outputDirectory>
    </file>
     <file>
      <source>dp2ws.sh</source>
      <outputDirectory>./fwk</outputDirectory>
    </file>
     <file>
      <source>dp2ws_local.bat</source>
      <outputDirectory>./fwk</outputDirectory>
    </file>
     <file>
      <source>dp2ws.bat</source>
      <outputDirectory>./fwk</outputDirectory>
    </file>
     <file>
      <source>README.txt</source>
      <outputDirectory>.</outputDirectory>
    </file>
     <file>
      <source>NOTICE.txt</source>
    </file>


  </files>
  
</assembly>
