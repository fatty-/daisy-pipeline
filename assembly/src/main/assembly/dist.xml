<?xml version="1.0"?>
<assembly>
  <id>main</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>
  <baseDirectory>daisy-pipeline</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>etc/**</include>
        <include>samples/**</include>
        <include>NOTICE.txt</include>
        <include>README.txt</include>
      </includes>
      <excludes>
        <exclude>etc/config.properties</exclude>
        <exclude>etc/org.apache.felix.fileinstall-*.cfg</exclude>
      </excludes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>etc/config.properties</include>
        <include>etc/org.apache.felix.fileinstall-framework.cfg</include>
        <include>etc/org.apache.felix.fileinstall-frontend.cfg</include>
        <include>etc/org.apache.felix.fileinstall-modules.cfg</include>
      </includes>
      <filtered>true</filtered>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>bin/**</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <fileMode>0755</fileMode>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>target/bundles/bootstrap</directory>
      <outputDirectory>/system/bootstrap</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/bundles/felix</directory>
      <outputDirectory>/system/felix</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/bundles/libs</directory>
      <outputDirectory>/system/framework</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/bundles/pipeline</directory>
      <excludes>
        <exclude>webservice-*.jar</exclude>
      </excludes>
      <outputDirectory>/system/framework</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/bundles/pipeline</directory>
      <includes>
        <include>webservice-*.jar</include>
      </includes>
      <outputDirectory>/system/frontend</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/bundles/modules</directory>
      <outputDirectory>/modules</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
