                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <id>copy-libs-bundles</id>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/bundles/libs</outputDirectory>
              <artifactItems>
                <!-- Runtime dependencies -->
                <artifactItem>
                  <groupId>org.daisy.example.libs</groupId>
                  <artifactId>commons-httpclient-osgi</artifactId>
