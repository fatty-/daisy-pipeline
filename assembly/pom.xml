                </artifactItem>
                <artifactItem>
                  <groupId>com.xmlcalabash</groupId>
                  <artifactId>com.xmlcalabash</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>commons-codec</groupId>
                  <artifactId>commons-codec</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>commons-fileupload</groupId>
