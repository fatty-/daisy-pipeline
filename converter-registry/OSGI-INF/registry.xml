<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="init" deactivate="close" immediate="true" name="converter-registry">
   <implementation class="org.daisy.converter.registry.OSGIConverterRegistry"/>
   <service>
      <provide interface="org.daisy.pipeline.modules.converter.ConverterRegistry"/>
   </service>
   <reference bind="addConverterDescriptor" cardinality="0..n" interface="org.daisy.pipeline.modules.converter.ConverterDescriptor" policy="dynamic"/>
   <reference bind="setParser" cardinality="1..1" interface="org.daisy.converter.parser.ConverterParser" policy="static"/> 
   <reference bind="setXprocFactory" cardinality="1..1" interface="org.daisy.pipeline.xproc.XProcessorFactory" policy="static"/>
   <reference bind="setUriResolver" cardinality="1..1" interface="org.daisy.pipeline.modules.UriResolverDecorator" name="resolver" policy="static"/>
   
</scr:component>
