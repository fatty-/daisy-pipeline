<?xml version="1.0"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="daisy" transaction-type="RESOURCE_LOCAL">
        <class>org.daisy.pipeline.persistence.messaging.PersistentMessage</class>
        <class>org.daisy.pipeline.persistence.Client</class>
        <class>org.daisy.pipeline.persistence.WSRequestLogEntry</class>
        <properties>
        
            
        
        	<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
        	<property name="javax.persistence.jdbc.url" value="jdbc:derby:/tmp/db;create=true"/>
         <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
