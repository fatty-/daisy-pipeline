<?xml version="1.0"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/persistence" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  <persistence-unit name="cosa" transaction-type="RESOURCE_LOCAL"/>
  <persistence-unit name="pipeline-pu" transaction-type="RESOURCE_LOCAL">
    <class>org.daisy.pipeline.persistence.messaging.PersistentMessage</class>
    <class>org.daisy.pipeline.persistence.webservice.PersistentClient</class>
    <class>org.daisy.pipeline.persistence.webservice.PersistentRequestLogEntry</class>

    <class>org.daisy.pipeline.persistence.jobs.PersistentSource</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentInputPort</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentOption</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentParameter</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentJobContext</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentJob</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentPortResult</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentOptionResult</class>
    <class>org.daisy.pipeline.persistence.jobs.PersistentMapper</class>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <property name="eclipselink.logging.level" value="INFO"/>
      <property name="eclipselink.logging.thread" value="true"/>
      <property name="eclipselink.logging.session" value="false"/>
      <property name="eclipselink.logging.exceptions" value="true"/>
      <property name="eclipselink.logging.timestamp" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
